{
  "env": {
    "node": true
  },
  "globals": {
    "Promise": true
  },
  "plugins": [
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "es6": true
    }
  },
  "rules": {
    "import/no-unresolved": [
      2,
      {
        "commonjs": true,
        "amd": true
      }
    ],
    "semi": 2,
    "no-undef": 2,
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "comma-dangle": 2
  }
}